{
  "version": 2,
  "name": "rapid-reach-backend",
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/server.js" },
    { "src": "/(.*)", "dest": "backend/src/server.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
